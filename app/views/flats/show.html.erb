<div class="section">
  <h1><%= @flat.name %></h1>
  <p><%= @flat.address %></p>
</div>

<div class="section">
  <h3>A bit more about this flat:</h3>
  <p><%= @flat.description %></p>
</div>

<div class="section">
  <h3>Details:</h3>
  <ul class="details">
    <li><i class="fa-solid fa-user-check"></i> <%= @flat.number_of_guests %></li>
    <li><i class="fa-solid fa-dollar-sign"></i> <%= @flat.price_per_night %></li>
  </ul>
</div>

<p><%= link_to 'Edit', edit_flat_path(@flat) %> | <%= link_to 'Back', flats_path %></p>
